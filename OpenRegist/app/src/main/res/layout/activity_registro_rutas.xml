<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registroRutas">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="491dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENRRUTAR" />

        <EditText
            android:id="@+id/camponombreruta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="NOMBRE EMPRESA"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/campodireccionruta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="DIRECCION"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/botonregistrarruta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRAR RUTA" />

        <Button
            android:id="@+id/botoncancelarruta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINALIZAR" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>